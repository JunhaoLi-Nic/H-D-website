{
    "name": "Testimonial",
    "type": "object",
    "properties": {
      "customer_name": {
        "type": "string",
        "description": "Customer's name"
      },
      "rating": {
        "type": "number",
        "minimum": 1,
        "maximum": 5,
        "description": "Rating out of 5 stars"
      },
      "review": {
        "type": "string",
        "description": "Customer review text"
      },
      "service_type": {
        "type": "string",
        "description": "Type of service provided"
      },
      "location": {
        "type": "string",
        "description": "Customer location (city)"
      },
      "featured": {
        "type": "boolean",
        "default": false,
        "description": "Whether to feature this testimonial"
      }
    },
    "required": [
      "customer_name",
      "rating",
      "review"
    ]
  }